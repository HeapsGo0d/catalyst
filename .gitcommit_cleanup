#!/bin/bash
set -e

cd /home/nathan/dev/catalyst

echo "Staging cleanup changes..."
git add -A

# Check if there are staged changes
if git diff --staged --quiet; then
  echo "No cleanup changes to commit."
else
  echo "Committing cleanup..."
  git commit -m "Clean up repository: remove development artifacts and messy implementations

- Remove all test_*.sh files from root directory
- Remove template.sh and ORGANIZER_FALLBACK.md
- Remove complex start.sh implementation
- Remove Python organizer to simplify dependencies
- Prepare for clean implementation based on proven reference patterns"
fi

echo "Pushing changes to GitHub..."
git push origin main

echo "âœ… Repository cleanup synced with GitHub"
echo "Ready for clean implementation phase"

# Self-delete this script after use
rm -f /home/nathan/dev/catalyst/.gitcommit_cleanup